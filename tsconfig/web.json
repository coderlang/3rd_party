{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "noImplicitReturns": true,
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmit": false,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib":["dom", "ScriptHost"]
  },
  "include": [
    "../../pages",
    "../../miniprogram_npm",
    "../../*.ts"
  ],
  "exclude": [
    "../../node_modules"
  ]
}